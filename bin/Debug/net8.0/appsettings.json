{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=ATSdB;Username=postgres;Password=postgrespw"
  },
  "ExternalApis": {
    "OpenCats": {
      "BaseUrl": "https://your-opencats-instance.com",
      "ApiKey": "your-opencats-api-key"
    },
    "Apideck": {
      "BaseUrl": "https://unify.apideck.com",
      "ApiKey": "your-apideck-api-key",
