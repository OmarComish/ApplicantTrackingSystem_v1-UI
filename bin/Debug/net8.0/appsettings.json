      "ConsumerId": "your-consumer-id"
    },
    "Knit": {
      "BaseUrl": "https://api.getknit.dev",
      "ApiKey": "your-knit-api-key"
    },
    "Merge": {
      "BaseUrl": "https://api.merge.dev/api",
      "ApiKey": "your-merge-api-key"
    }
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@yourcompany.com",
    "FromName": "ATS System"
  },
  "Features": {
    "EnableOpenCatsSync": true,
    "EnableApideckIntegration": true,
    "EnableKnitIntegration": true,
    "EnableMergeIntegration": true,
    "AutoShortlisting": {
      "Enabled": true,
      "DefaultMinEducation": "Bachelor",
      "DefaultMinExperience": 2,
      "DefaultTopCount": 10
